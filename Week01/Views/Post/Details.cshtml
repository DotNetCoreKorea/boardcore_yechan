@using Microsoft.AspNetCore.Mvc
@model Post
<h2>@Model.Title</h2>
<form class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            <div class="form-control-static text-pre">@Model.Content</div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-default">수정</a>
        </div>
    </div>
</form>